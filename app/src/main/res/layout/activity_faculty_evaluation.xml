<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".FacultyEvaluationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Evaluation completed?"
            android:textSize="18sp"
            android:gravity="center|left"
            android:layout_weight="1"/>

        <Switch
            android:id="@+id/evaluationCompleteSwitch"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:checked="false"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#888888"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/updateEvaluationAll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Update Evaluation (All)"
            android:layout_weight="1"
            android:gravity="center"/>

        <Button
            android:id="@+id/updateEvaluationSBS"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Update Evaluation (Student-by-Student)"
            android:layout_weight="1"
            android:gravity="center"/>

        <Button
        android:id="@+id/viewEvaluation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="View Evaluation (All)"
        android:layout_weight="1"
        android:gravity="center"/>

    </LinearLayout>

</LinearLayout>