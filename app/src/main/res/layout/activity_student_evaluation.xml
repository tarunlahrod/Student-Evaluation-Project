<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:id="@+id/studentEvaluationLayout"
    tools:context=".StudentEvaluationActivity">

    <TextView
        android:id="@+id/evaluation_status_for_student_TV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Checking status..."
        android:textSize="30sp"
        android:layout_weight="1"
        android:textAlignment="center"
        android:gravity="center"/>

    <Button
        android:id="@+id/view_student_evaluation_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View my evaluation"/>

</LinearLayout>